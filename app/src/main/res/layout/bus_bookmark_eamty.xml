<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/lo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="102dp"
        android:paddingBottom="104dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ig_empty_bus"
            android:layout_width="188dp"
            android:layout_height="54dp"
            android:layout_centerInParent="true"
            android:src="@drawable/img_bus_bye_188_pt" />

        <TextView
            android:id="@+id/tv_bus_Search_Fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ig_empty_bus"
            android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
            android:letterSpacing="-0.03"
            android:text="@string/bus_bookmark_empty"
            android:textAlignment="center"
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

    </LinearLayout>


</layout>