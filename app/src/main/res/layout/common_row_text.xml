<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lo_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/right_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.02"
                    android:textColor="@color/color_333333"
                    android:textSize="16dp"
                    tools:text="이름" />

                <TextView
                    android:id="@+id/text_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_noto_sans_cj_kkr_regular"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.02"
                    android:textColor="@color/color_999999"
                    android:textSize="12dp"
                    android:visibility="gone"
                    tools:text="보조이름"
                    tools:visibility="visible" />
            </LinearLayout>

            <ImageView
                android:id="@+id/right_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:src="@drawable/common_cursor_right_20" />
        </RelativeLayout>

        <View
            android:id="@+id/v_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_F2F2F2" />
    </LinearLayout>
</layout>