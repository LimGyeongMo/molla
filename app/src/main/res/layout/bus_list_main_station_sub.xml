<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_line_10"
        android:backgroundTint="@color/color_F2F2F2"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingStart="14dp"
        android:paddingTop="17dp"
        android:paddingEnd="14dp"
        android:paddingBottom="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tp"
                android:layout_width="42dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_round_area_4"
                android:backgroundTint="@color/color_2971F6"
                android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                android:gravity="center"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="8dp"
                tools:text="없음"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_routeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/tv_tp"
                android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                android:letterSpacing="-0.02"
                tools:text="204"
                android:textColor="#333333"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lowYn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_round_area_10_5"
                    android:backgroundTint="@color/color_F2F2F2"
                    android:layout_marginEnd="4dp"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:gravity="center"
                    android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                    android:text="저상"
                    android:textColor="@color/color_333333"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="8dp"
                    android:textSize="12dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_Late_yn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_line_10"
                    android:backgroundTint="@color/color_ff923b"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="2dp"
                    android:layout_marginEnd="4dp"
                    android:text="지연"
                    android:textColor="@color/color_ff923b"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/tv_first_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                    android:letterSpacing="-0.02"
                    tools:text="8분 33초"
                    android:textColor="@color/color_333333"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_station_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                    android:letterSpacing="-0.02"
                    tools:text="[11번째 전]"
                    android:textColor="@color/color_999999"
                    android:textSize="12dp" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                android:letterSpacing="-0.02"
                android:text="대평리시장 방면"
                android:textColor="#999999"
                android:textSize="14dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lowYn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_round_area_10_5"
                    android:backgroundTint="@color/color_F2F2F2"
                    android:layout_marginEnd="4dp"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:gravity="center"
                    android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                    android:text="저상"
                    android:textColor="@color/color_333333"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="8dp"
                    android:textSize="12dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_Late_yn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_line_10"
                    android:backgroundTint="@color/color_ff923b"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="2dp"
                    android:layout_marginEnd="4dp"
                    android:text="지연"
                    android:textColor="@color/color_ff923b"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_second_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_toLeftOf="@+id/tv_bus_before1"
                    android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                    android:letterSpacing="-0.02"
                    tools:text="12분 33초"
                    android:textColor="@color/color_333333"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_station_before1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                    android:letterSpacing="-0.02"
                    tools:text="[22번째 전]"
                    android:textColor="@color/color_999999"
                    android:textSize="12dp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</layout>