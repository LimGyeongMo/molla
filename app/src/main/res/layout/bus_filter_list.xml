<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/flitering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:elevation="10dp"
        android:background="@drawable/bg_round_area_20"
        android:backgroundTint="@color/white"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_fliter"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_busstop_gray_22_pt"/>
        
        <TextView
            android:id="@+id/tv_fliter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
            android:textSize="16dp"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="11sp"
            android:textColor="@color/color_999999"
            android:text="@string/bus_station"/>


    </LinearLayout>


</layout>