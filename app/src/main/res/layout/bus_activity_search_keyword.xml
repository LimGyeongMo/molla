<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.daegurobus.widget.CommonTitleView
                android:id="@+id/title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bottom_line_visibility="gone"
                app:text="버스 찾기" />

            <LinearLayout
                android:id="@+id/lo_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/lo_tab_bus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">


                    <RelativeLayout
                        android:id="@+id/rl_tab_bus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minHeight="45dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/im_tab_bus"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/ic_bus_on_20_pt" />

                            <TextView
                                android:id="@+id/tv_tab_bus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                                android:letterSpacing="-0.03"
                                android:text="버스"
                                android:textColor="@color/color_01CAFF"
                                android:textSize="16sp" />
                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignBottom="@id/rl_tab_bus"
                        android:background="@color/color_E6E6E6" />

                    <View
                        android:id="@+id/v_tab_bus_bottom_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignBottom="@id/rl_tab_bus"
                        android:background="@color/color_01CAFF"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lo_tab_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_tab_station"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="45dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/im_tab_station"
                                    android:layout_width="20dp"
                                    android:layout_height="22dp"
                                    android:layout_marginTop="2dp"
                                    android:src="@drawable/common_busstop_22" />

                                <TextView
                                    android:id="@+id/tv_tab_station"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                                    android:letterSpacing="-0.03"
                                    android:text="정류장"
                                    android:textColor="@color/color_999999"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </RelativeLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignBottom="@id/rl_tab_station"
                        android:background="@color/color_E6E6E6" />

                    <View
                        android:id="@+id/v_tab_station_bottom_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignBottom="@id/rl_tab_station"
                        android:background="@color/color_01CAFF"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lo_tab_path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_tab_path"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minHeight="45dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/im_tab_path"
                                android:layout_width="20dp"
                                android:layout_height="22dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/ic_arrow_20_off" />

                            <TextView
                                android:id="@+id/tv_tab_path"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                                android:letterSpacing="-0.03"
                                android:text="경로찾기"
                                android:textColor="@color/color_999999"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignBottom="@id/rl_tab_path"
                        android:background="@color/color_E6E6E6" />

                    <View
                        android:id="@+id/v_tab_path_bottom_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignBottom="@id/rl_tab_path"
                        android:background="@color/color_01CAFF"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never">

                </androidx.viewpager.widget.ViewPager>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>