<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lo_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="18dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:paddingEnd="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/traffic_top"
                                android:layout_width="4dp"
                                android:layout_height="33.5dp"
                                android:background="@color/color_CCCCCC" />


                            <View
                                android:id="@+id/traffic_botton"
                                android:layout_width="4dp"
                                android:layout_height="33.5dp"
                                android:background="@color/color_CCCCCC" />
                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ig_ord"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="3dp"
                        android:src="@drawable/common_direction_bottom14"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/lo_vihicle"
                        android:layout_width="51dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_round_line_8_white_999999"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/tv_vihicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="5dp"
                            android:maxLength="20"
                            android:text="회차"
                            android:textColor="@color/color_333333"
                            android:textSize="10dp"
                            android:textStyle="normal" />

                        <ImageView
                            android:id="@+id/ig_vihicle"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/ic_refresh_10_pt" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lo_bus_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:orientation="horizontal"
                        android:visibility="invisible">

                        <LinearLayout
                            android:layout_width="31dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="2.3dp"
                            android:background="@drawable/fi_speech_bubble_32">

                            <TextView
                                android:id="@+id/tv_bus_location_num"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingStart="4dp"
                                android:text="7777"
                                android:textSize="9dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ig_bus_location"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_bus_color_20_pt_blue" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <LinearLayout
                                android:id="@+id/lo_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_station_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                                    android:letterSpacing="-0.05"
                                    android:maxLength="20"
                                    android:paddingBottom="2dp"
                                    android:textColor="@color/color_333333"
                                    android:textSize="14dp"
                                    tools:text="연경동종점2" />

                                <TextView
                                    android:id="@+id/tv_subwayNum1"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginStart="4dp"
                                    android:background="@drawable/bg_circle_line"
                                    android:backgroundTint="@color/color_C40025"
                                    android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                                    android:gravity="bottom|center_horizontal"
                                    android:includeFontPadding="false"
                                    android:text="1"
                                    android:textColor="@color/color_C40025"
                                    android:textSize="12dp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tv_subwayNum2"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginStart="4dp"
                                    android:background="@drawable/bg_circle_line"
                                    android:backgroundTint="@color/color_00A87D"
                                    android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                                    android:gravity="bottom|center_horizontal"
                                    android:includeFontPadding="false"
                                    android:text="2"
                                    android:textColor="@color/color_00A87D"
                                    android:textSize="12dp"
                                    android:visibility="gone" />


                                <TextView
                                    android:id="@+id/tv_subwayNum3"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginStart="4dp"
                                    android:background="@drawable/bg_circle_line"
                                    android:backgroundTint="@color/color_FFD300"
                                    android:fontFamily="@font/font_noto_sans_cj_kkr_medium"
                                    android:gravity="bottom|center_horizontal"
                                    android:includeFontPadding="false"
                                    android:text="3"
                                    android:textColor="@color/color_FFD300"
                                    android:textSize="12dp"
                                    android:visibility="gone" />


                                <ImageView
                                    android:id="@+id/tv_wifi"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="4dp"
                                    android:src="@drawable/common_wifi_20"
                                    android:visibility="gone" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/lo_name"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_bus_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_noto_sans_cj_kkr_regular"
                                    android:letterSpacing="-0.05"
                                    android:lineSpacingExtra="8sp"
                                    android:maxLength="10"
                                    android:textColor="#999999"
                                    android:textSize="12dp"
                                    android:textStyle="normal"
                                    tools:text="387429" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="10dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="#f2f2f2" />

                                <TextView
                                    android:id="@+id/tv_vehicle_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_noto_sans_cj_kkr_regular"
                                    android:letterSpacing="-0.05"
                                    android:lineSpacingExtra="8sp"
                                    android:maxLength="20"
                                    android:textColor="#999999"
                                    android:textSize="12dp"
                                    tools:text="05:55 ~ 23:23" />
                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ig_bookmark"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/common_off_star_40" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/v_bottom_line"
                android:layout_width="match_parent"
                android:layout_marginStart="63.2dp"
                android:layout_gravity="bottom"
                android:layout_height="1dp"
                android:background="@color/color_F2F2F2" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/lo_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerview"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_F2F2F2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="18dp"
                android:paddingTop="20dp"
                android:paddingEnd="80dp"
                android:paddingBottom="38dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_noto_sans_cj_kkr_regular"
                    android:letterSpacing="-0.05"
                    android:text="@string/bus_notification_etc"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>